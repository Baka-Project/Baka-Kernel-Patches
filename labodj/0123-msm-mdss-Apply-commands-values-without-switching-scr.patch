 void mdss_dsi_panel_pwm_cfg(struct mdss_dsi_ctrl_pdata *ctrl)
 {
@@ -1095,12 +1096,21 @@ static int write_local_on_cmds(struct device *dev, const char *buf,
 	int dlen, offset = 0;
 	bool rgb;
 	char tmp[3];
